<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.sean.stylish_review.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.sean.stylish_review.profile.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile"/>

    <fragment
        android:id="@+id/cartFragment"
        android:name="com.sean.stylish_review.cart.CartFragment"
        android:label="CartFragment"
        tools:layout="@layout/fragment_cart"/>

    <fragment
        android:id="@+id/catalogFragment"
        android:name="com.sean.stylish_review.catalog.pager.PagerFragment"
        android:label="PagerFragment"
        tools:layout="@layout/fragment_catalog"/>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.sean.stylish_review.detail.DetailFragment"
        android:label="DetailFragment"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="productData"
            app:argType="com.sean.stylish_review.network.Product" />
    </fragment>

</navigation>